<odoo>
  <?xml version="1.0" encoding="UTF-8"?>
  <template id="report_invoice_ticket_template">
    <t t-call="web.html_container">
      <t t-call-assets="invoice_multi_report.ticket_css"/>
      <div class="ticket-paper">
        <!-- contenido del ticket -->
      </div>
    </t>
</template>

<template id="ticket_css" name="Ticket CSS" inherit_id="">
    <style type="text/css">
        /* Aqu√≠ pega todo el contenido de ticket.css */
        .ticket-paper { width: 78mm; margin: 0; padding: 6px; font-family: "DejaVu Sans", "Arial", sans-serif; font-size: 10px; }
        .ticket-header { text-align: center; }
        .ticket-lines { width: 100%; border-collapse: collapse; font-size: 10px; }
        .ticket-lines td, .ticket-lines th { padding: 2px 0; }
        .small { font-size: 9px; }
        .bold { font-weight: 700; }
        .right { text-align: right; }
    </style>
</template>

  <template id="report_invoice_ticket_template">
    <t t-call="web.html_container">
      <div class="ticket-paper">
        <div class="ticket-header">
          <h3 class="small bold">Mi Empresa S.L.</h3>
          <div class="small">C/ Ejemplo, 1 - CIF: X12345678</div>
          <div class="small mt8">Factura: <t t-esc="doc.name"/></div>
          <div class="small">Fecha: <t t-esc="doc.invoice_date or doc.date"/></div>
        </div>
        <hr/>
        <table class="ticket-lines">
          <t t-foreach="doc.invoice_line_ids" t-as="l">
            <tr>
              <td><t t-esc="l.product_id.name or l.name"/></td>
              <td class="right"><t t-esc="(l.quantity)"/> x <t t-esc="l.price_unit"/></td>
            </tr>
            <tr>
              <td colspan="2" class="right small"><t t-esc="l.price_total"/></td>
            </tr>
          </t>
        </table>
        <hr/>
        <table width="100%" class="small">
          <tr>
            <td>Subtotal</td>
            <td class="right"><t t-esc="doc.amount_untaxed"/></td>
          </tr>
          <tr>
            <td>Impuestos</td>
            <td class="right"><t t-esc="doc.amount_tax"/></td>
          </tr>
          <tr class="bold">
            <td>Total</td>
            <td class="right"><t t-esc="doc.amount_total"/></td>
          </tr>
        </table>
        <div class="small ticket-footer mt8">
          Gracias por su compra
        </div>
      </div>
    </t>
  </template>

  <report
    id="report_invoice_ticket"
    string="Factura Ticket"
    model="account.move"
    report_type="qweb-pdf"
    name="invoice_multi_report.report_invoice_ticket_template"
    file="invoice_multi_report.report_invoice_ticket_template"
    attachment_use="False"
  />
</odoo>


